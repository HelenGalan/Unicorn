@model Unicorn.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Seller</h4>
    <hr />
    <!-- elemento dl para listar os campos desse objeto -->
    <dl>
        <!-- dt pra mostrat o nome do campo-->
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <!-- dd pra mostrat o valor do campo-->
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
         <dt>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
    </dl>

    <!-- tag form para o botao de confirmar ou cancelar -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> <!-- campo oculto no formulario para enviar o codigo do vendedor deletado -->
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to the list</a> <!-- link para poder cancelar e voltar para a lista -->
    </form>
</div>
